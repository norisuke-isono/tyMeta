<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - tyMETA</title>
    <script src="https://kit.fontawesome.com/4af6b17ea7.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm fixed-top navbar-light bg-white border-bottom box-shadow p-1">
            <div class="container-fluid">
                <a class="navbar-brand" asp-page="/Broadcasts/Schedules">tyMETA</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <div class="row">
            <nav class="col-md-2 d-none d-md-block bg-light sidebar">
                <div class="sidebar-sticky">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a id="schedules-nav-link" class="nav-link p-3" asp-page="/Broadcasts/Schedules">
                                <i class="fas fa-list-ol pr-2"></i>
                                番組構成
                            </a>
                        </li>
                        <li class="nav-item">
                            <a id="specifications-nav-link" class="nav-link p-3" asp-page="/Specifications/Search">
                                <i class="fas fa-search pr-2"></i>
                                明細検索
                            </a>
                        </li>                        

                        <li class="nav-item">
                            <div id="master-link-group" class="nav-link-group p-3" data-toggle="collapse" data-target="#master-nav-links">
                                <i class="fas fa-database pr-2"></i>
                                マスタ管理
                            </div>
                            <ul id="master-nav-links" class="collapse show pl-4">
                                <a id="tvprograms-nav-link" class="nav-link" asp-page="/TvPrograms/Index">
                                    番組マスタ
                                </a>
                                <a id="corners-nav-link" class="nav-link" asp-page="/Corners/Index">
                                    コーナーマスタ
                                </a>
                                <a id="sheet-nav-link" class="nav-link" asp-page="/DefaultSchedules/Index">
                                    シートマスタ
                                </a>
                                <a id="videosources-nav-link" class="nav-link" asp-page="/VideoSources/Index">
                                    映像ソース
                                </a>
                                <a id="articlesources-nav-link"  class="nav-link" asp-page="/ArticleSources/Index">
                                    原稿ソース
                                </a>  
                            </ul>
                        </li>
                    </ul>
                </div>
            </nav>

            <main role="main" class="col-md-10 ml-sm-auto col-lg-10 px-4 mt-3">
                @RenderBody()
            </main>
        
        </div>
    </div>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.ui/1.12.1/jquery-ui.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        $("@ViewData["ActiveNavLink"]").addClass("active");
        $("@ViewData["ActiveNavLinkGroup"]").addClass("show");
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>