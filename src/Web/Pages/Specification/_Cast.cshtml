@model Web.Pages_Specification.EditModel

<table class="table">
    <thead>
        <tr>
            <th scope="col">
                @Html.DisplayNameFor(model => model.SpecificationViewModel.CastViewModels[0].Name)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.SpecificationViewModel.CastViewModels[0].JobTitle)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.SpecificationViewModel.CastViewModels[0].Affiliation)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.SpecificationViewModel.CastViewModels[0].ContactAddress)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.SpecificationViewModel.CastViewModels[0].Note)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @for(var i=0; i<Model.SpecificationViewModel.CastViewModels.Count(); i++)
        {
            <tr>
                <td>
                    <input class="form-control" asp-for="@Model.SpecificationViewModel.CastViewModels[i].Name" />
                </td>
                <td>
                    <input class="form-control" asp-for="@Model.SpecificationViewModel.CastViewModels[i].JobTitle" />
                </td>
                <td>
                    <input class="form-control" asp-for="@Model.SpecificationViewModel.CastViewModels[i].Affiliation" />
                </td>
                <td>
                    <input class="form-control" asp-for="@Model.SpecificationViewModel.CastViewModels[i].ContactAddress" />
                </td>
                <td>
                    <input class="form-control" asp-for="@Model.SpecificationViewModel.CastViewModels[i].Note" />
                </td>
                <input class="dead-flag" type="hidden" asp-for="@Model.SpecificationViewModel.CastViewModels[i].Dead" value="false" />
                <td>
                    <span class="remove">
                        <button type="button" class="btn btn-danger btn-sm">
                            <i class="fa fa-trash" aria-hidden="true"></i>&nbsp;削除
                        </button>
                    </span>
                </td>
            </tr> 
        }
        </tr>
    </tbody>
</table>
